{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["vite-plugin-svg-icons/client"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts", 
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
